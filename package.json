{
  "name": "culpa",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:5000",
  "dependencies": {
    "@angular/common": "6.0.0",
    "@angular/core": "6.0.0",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "lodash.debounce": "^4.0.8",
    "mutationobserver-shim": "^0.3.7",
    "prettier": "2.0.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hook-form": "6.0.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "semantic-ui-react": "0.88.0",
    "testing-library": "0.0.2",
    "typescript": "3.2.1"
  },
  "scripts": {
    "start-frontend": "react-scripts start",
    "start-backend": "export FLASK_APP=api/app.py && pipenv run flask",
    "build": "react-scripts build",
    "test-frontend": "react-scripts test",
    "test-backend": "pipenv run flake8 && pipenv run test",
    "eject": "react-scripts eject",
    "lint-js": "eslint src --ext .js --ext .jsx",
    "lint-py": "pipenv run flake8",
    "format": "prettier --write \"**/*.+(js|jsx|json|css)\""
  },
  "eslintConfig": {
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/order": [
        2,
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    },
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ],
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    }
  },
  "prettier": {
    "singleQuote": false
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint-js && yarn lint-py"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "18.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5"
  }
}
